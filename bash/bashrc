
# Global
[ -f /etc/bashrc ] && source /etc/bashrc

# History
HISTSIZE=10000
HISTFILESIZE=1000000
HISTCONTROL=ignoreboth
shopt -s histappend

# Aliases
alias l='ls --color -lhgo $*'
alias d='ls --color -lhgod $*'
alias L='ls --color -lhgoa $*'
alias D='ls --color -lhgoda $*'
alias u='du -sk * .[!.]* 2>/dev/null | sort -n'
alias g='glances --theme-white'

# tmt aliases
alias reserve='tmt run login --step execute execute finish provision --how container --image fedora'
alias start='tmt run --verbose --until report execute --how tmt --interactive test --name . provision --how virtual --image fedora'
alias retest='tmt run --last test --name . discover -f execute -f --how tmt --interactive'
alias stop='tmt run --last report --verbose finish'

# Editor
export EDITOR=vim
set -o vi
bind -m vi-command 'Control-l: clear-screen'
bind -m vi-insert 'Control-l: clear-screen'

# Git
files="/usr/lib/git-core/git-sh-prompt
    /usr/share/git-core/contrib/completion/git-prompt.sh"
for file in $files; do
    test -f $file && source $file
done
export GIT_PS1_SHOWDIRTYSTATE=true

# Prompt
PS1='\u@\h:\w$(declare -F __git_ps1 &>/dev/null && __git_ps1 " (%s)")> '

# Umask
umask 002

# Python
export PYTHONSTARTUP=~/.pythonrc.py
export PYTHONIOENCODING=utf-8:surrogateescape
export PYTHONDONTWRITEBYTECODE=1

# Tokens
source $HOME/.tokens

# Functions
source ~/git/dot/bash/functions

# Generated by tmt
source /home/psss/.config/tmt/tmt-complete.bash
